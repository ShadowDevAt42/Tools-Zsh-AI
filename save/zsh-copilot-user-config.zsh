ZSH_COPILOT_SEND_CONTEXT=true
ZSH_COPILOT_DEBUG=true

# LLM Provider Configuration
ZSH_COPILOT_LLM_PROVIDER="ollama"

# OpenAI Configuration
ZSH_COPILOT_OPENAI_API_URL="https://api.openai.com/v1"
